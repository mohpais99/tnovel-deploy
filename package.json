{
  "name": "tnovel-deploy",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "v14.6.0",
    "npm": "6.14.10"
  },
  "scripts": {
    "server": "nodemon",
    "start": "nodemon ./bin/www.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run start\" \"npm run client\"",
    "migrate": "npx knex migrate:latest --knexfile database/knexfile.js",
    "migrate:rollback": "npx knex migrate:rollback --knexfile database/knexfile.js",
    "build": "npm run build --prefix client",
    "heroku-postbuild": "npm install --prefix client && npm run build"
  },
  "author": "fz-dev",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.21.18",
    "morgan": "^1.10.0",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "nodemon": "^2.0.7"
  }
}
